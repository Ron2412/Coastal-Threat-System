# Coastal Threat Frontend - Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_ML_API_BASE_URL=http://localhost:5001
VITE_API_TIMEOUT=10000

# Polling Intervals (in milliseconds)
VITE_SENSOR_POLLING_INTERVAL=30000
VITE_ALERTS_POLLING_INTERVAL=60000
VITE_ANALYTICS_POLLING_INTERVAL=120000
VITE_STATUS_POLLING_INTERVAL=30000

# UI Configuration
VITE_CHART_REFRESH_RATE=1000
VITE_MAX_CHART_DATA_POINTS=50
VITE_ANIMATION_DURATION=300
VITE_DEBOUNCE_DELAY=500

# Data Limits
VITE_MAX_SENSOR_READINGS=1000
VITE_MAX_ALERTS=500
VITE_CACHE_TIMEOUT=300000

# Feature Flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ML_PREDICTIONS=true
VITE_ENABLE_DATA_EXPORT=true
VITE_ENABLE_ADVANCED_ANALYTICS=true

# Application Info
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIME=
